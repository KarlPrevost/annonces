{% extends 'base.html.twig' %}

{% block title %}Annonce : {{ annonce.title }}{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"/>
{% endblock %}

{% block body %}
<div class="container">
    <div class="container">
        <div class="caroulix" id="caroulix" data-ax="caroulix">
            <div class="caroulix-arrow caroulix-prev">
                <i class="fas fa-chevron-left"></i>
            </div>
            <div class="caroulix-arrow caroulix-next">
                <i class="fas fa-chevron-right"></i>
            </div>
            {% for image in annonce.image %}
                <div class="caroulix-item">
                    <img src="{{ asset('uploads/' ~ image.name)|imagine_filter('rectangle') }}" alt="{{ annonce.title }}" />
                </div>
            {% endfor %}
        </div>

        <div class="card shadow-1 fx-row">
        <div class="primary d-flex vcenter fx-center px-4">
            <img src="{{ asset('uploads/' ~ annonce.image[0].name)|imagine_filter('square') }}" alt="{{ annonce.title }}" />
        </div>
        <div class="flex fx-col fx-grow">
            <div class="card-header">{{ annonce.title }}</div>
            <div class="card-content">
                <p>Categorie: {{ annonce.categorie.name }}</p>
                <p>{{ annonce.content|raw }}</p>
            </div>
        </div>
        </div>
    </div>
</div>
{% endblock %}
{% block  javascripts %}
<script>
let caroulix = new Axentix.Caroulix('#caroulix');
</script>
{% endblock %}
