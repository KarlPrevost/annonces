{% extends 'user.html.twig' %}

{% block body %}
    <div class="grix xs4 container">
    {% for message in app.flashes('message') %}
    <div class="col-xs4">
    <div class="p-3 my-2 rounded-2 success">{{ message }}</div>
    </div>
    {% endfor %}
        <h1 class="col-xs4">Profile</h1>
        <div class="col-xs1">Name:</div>
        <div class="col-xs3">{{ app.user.name }}</div>
        <div class="col-xs1">Firstname:</div>
        <div class="col-xs3">{{ app.user.firstname }}</div>
        <div class="col-xs1">Email:</div>
        <div class="col-xs3">{{ app.user.email }}</div>
        <div class="col-xs4">
        <a href="{{ path('user_profile_edit') }}" class="btn shadow-1 rounded-1 blue">Modify Profile</a>
        <a href="{{ path('user_pass_edit') }}" class="btn shadow-1 rounded-1 blue">Modify Password</a>
    </div>

    <div class="col-xs4"> 
        <h1>My ads: ({{ app.user.annonce|length }})</h1>
    </div>

    {% for annonce in app.user.annonce %}
        <div class="col-xs1">Title</div>
        <div class="col-xs3">{{annonce.title}}</div>
    {% endfor %}

{% endblock %}
