{% extends 'user.html.twig' %}
{% block title %} Edit your Password - {{ app.user.firstname }}{% endblock %}
{% block body %}
    <div class="container">
        {% for message in app.flashes('error') %}
        <div class="col-xs4">
        <div class="p-3 my-2 rounded-2 error">{{ message }}</div>
        </div>
        {% endfor %}
        <div class="col xs4">
            <h1>Edit your Password</h1>
            <form method="post">
                <div class="form-field">
                    <label for="pass">Password</label>
                    <input type="password" id="pass" name="pass" class="form-control rounded-1"/>
                </div>
                <div class="form-field">
                    <label for="pass2">Confirm Password</label>
                    <input type="password" id="pass2" name="pass2" class="form-control rounded-1"/>
                </div>
                <button class="btn shadow-1 rounded-1 blue">Confirm</button>
            </form>
        </div>    
    </div>
{% endblock %}
