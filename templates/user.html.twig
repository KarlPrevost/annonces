<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} Annonces - {{ app.user.firstname }}{% endblock %}</title>
        <!-- Axentix CSS minified version -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@1.0.0-beta.0/dist/css/axentix.min.css">
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    </head>
    <body class="layout with-sidenav">
        <header>
        <nav class="navbar shadow-1 primary">
            <a href="{{ path('app_home') }}" class="navbar-brand">Annonces</a>
            <div class="navbar-menu ml-auto">
            <a class="navbar-link" href="#">Link 1</a>
            <a class="navbar-link" href="#">Link 2</a>
            <a class="navbar-link" href="#">Link 3</a>
            <a class="navbar-link" href="#">Link 4</a>
            </div>
        </nav>
        </header>

        <div id="example-sidenav" class="sidenav shadow-1 large fixed white">
            <div class="sidenav-header">
                <button data-target="example-sidenav" class="sidenav-trigger"><i class="fas fa-times"></i></button>
                <img class="sidenav-logo dropshadow-1" src="your_img_path" alt="Logo" />
            </div>
            <a href="#" class="sidenav-link active">Profile</a>
            <a href="#" class="sidenav-link">Ads</a>
        </div>

        <main>
            <button data-target="example-sidenav"
                class="btn rounded-1 press amaranth dark-1 sidenav-trigger hide-md-up">
                Open sidenav
            </button>
            {% block body %}{% endblock %}
        </main>

        <footer class="footer primary">
        </footer>

        <!-- Axentix JS minified version -->
        <script src="https://cdn.jsdelivr.net/npm/axentix@1.0.0-beta.0/dist/js/axentix.min.js"></script>
        {% block javascripts %}{% endblock %}
        <script>var sidenav = new Sidenav('#example-sidenav');</script>
        <script src="{{ asset('js/script.js') }}"></script>
    </body>
</html>
